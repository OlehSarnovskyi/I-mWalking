{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@modules": [
        "modules/index.ts"
      ],
      "@libs/snack-bar-message-interceptor": [
        "dist/libs/snack-bar-message-interceptor/snack-bar-message-interceptor",
        "dist/libs/snack-bar-message-interceptor"
      ],
      "paste-event-trimmer": [
        "dist/libs/paste-event-trimmer/paste-event-trimmer",
        "dist/libs/paste-event-trimmer"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
